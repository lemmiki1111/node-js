<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New User</title>
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <form
      action="/post-crud"
      method="POST"
      class="max-w-2xl mx-auto bg-white p-8 mt-10 rounded-2xl shadow-lg space-y-6"
    >
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
        Create an Account
      </h2>

      <!-- Email -->
      <div>
        <label
          for="email"
          class="block text-sm font-semibold text-gray-700 mb-2"
          >Email</label
        >
        <input
          placeholder="email..."
          type="email"
          id="email"
          name="email"
          required
          class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Password -->
      <div>
        <label
          for="password"
          class="block text-sm font-semibold text-gray-700 mb-2"
          >Password</label
        >
        <input
          placeholder="password..."
          type="password"
          id="password"
          name="password"
          required
          class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Firstname + Lastname -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label
            for="firstname"
            class="block text-sm font-semibold text-gray-700 mb-2"
            >First Name</label
          >
          <input
            placeholder="firstname..."
            type="text"
            id="firstname"
            name="firstname"
            required
            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label
            for="lastname"
            class="block text-sm font-semibold text-gray-700 mb-2"
            >Last Name</label
          >
          <input
            placeholder="lastname..."
            type="text"
            id="lastname"
            name="lastname"
            required
            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Address -->
      <div>
        <label
          for="address"
          class="block text-sm font-semibold text-gray-700 mb-2"
          >Address</label
        >
        <input
          placeholder="address..."
          type="text"
          id="address"
          name="address"
          class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Phone -->
      <div>
        <label
          for="phone"
          class="block text-sm font-semibold text-gray-700 mb-2"
          >Phone Number</label
        >
        <input
          placeholder="phone..."
          type="tel"
          id="phone"
          name="phone"
          class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Sex + Role -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label
            for="sex"
            class="block text-sm font-semibold text-gray-700 mb-2"
            >Gender</label
          >
          <select
            placeholder="sex..."
            name="sex"
            id="sex"
            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">-- Select Gender --</option>
            <option value="0">Female</option>
            <option value="1">Male</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div>
          <label
            for="role"
            class="block text-sm font-semibold text-gray-700 mb-2"
            >Role</label
          >
          <select
            name="role"
            id="role"
            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="1">User</option>
            <option value="2">Administrator</option>
            <option value="3">Patient</option>
          </select>
        </div>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold text-lg shadow-md hover:bg-blue-700 transition"
      >
        Register
      </button>
      <p>xin ch√†o</p>
    </form>
  </body>
</html>
